%% FF3 Library App Configuration

{erl_opts, [debug_info, warn_export_all, warn_unused_import, warn_missing_spec]}.

{deps, []}.

%% Test configuration
{profiles, [
    {test, [
        {cover_enabled, true},
        {cover_opts, [verbose]},
        {ct_opts, [{sys_config, ["test/test.config"]}]}
    ]}
]}.

%% Dialyzer configuration for static analysis
{dialyzer, [
    {warnings, [no_return, unmatched_returns, error_handling, unknown]},
    {plt_apps, [kernel, stdlib, crypto]}
]}.